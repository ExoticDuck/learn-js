  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-de-morgan": "^1.2.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
